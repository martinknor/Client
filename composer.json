{
  "name": "shopapi/client",
  "description": "ShopAPI client",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": [
    "shopapi"
  ],
  "authors": [
    {
      "name": "Petr Soukup",
      "email": "soukup@simplia.cz"
    }
  ],
  "require": {
    "lib-curl": "*",
    "php": ">=5.6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0"
  },
  "suggest": {
    "kdyby/curl-ca-bundle": "Https certificates bundle"
  },
  "autoload": {
    "psr-4": {
      "ShopAPI\\Client\\": "src/"
    },
    "files": [
      "src/exceptions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ShopAPI\\TestClient\\": "tests/"
    }
  }
}
